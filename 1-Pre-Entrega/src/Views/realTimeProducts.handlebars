<header>
   <nav class="navbar navbar-expand-lg bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><h1>Bentica</h1></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="nav navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/products?limit=6&page=1">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/current">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/cart/{{cid}}"><i class="material-icons">shopping_cart</i></a>
          </li>
      </ul>
    </div>
  </div>
</nav>
</header>
<h1>Products</h1>
<div class="container">
    <div id="hh" class="d-flex flex-wrap justify-content-center">
        {{#each products}}
        <div class="card" style="width: 18rem; margin-right: auto;">
            <img src="{{Thumbnail}}" width="auto" height="250" style="max-width: 100%;" class="card-img-top" alt="Imagen del producto">
            <div class="card-body d-flex flex-column justify-content-end">
                <h5 class="card-title">{{Title}}</h5>
                <p class="card-text">{{Description}}</p>
                <p class="card-text">Price: {{Price}}</p>
                <p class="card-text">{{Category}}</p>
                {{!-- <a class="btn btn-primary add-to-cart-btn" href="/carts/{{cid}}/products/{{id}}" >Add to cart</a> --}}
                <button id="addToCart" onclick="addToCart" class="button"> add to cart</button>
            </div>
        </div>
        {{/each}}
    </div>
        
</div>
    
</div>

<footer class="d-flex flex-column justify-content-center align-items-center">
  <p>total de productos: {{totalDocs}}</p>
  <p>pagina: {{page}}</p>
  <div class="d-flex justify-content-between">
      {{#if prevLink}}
          <a href={{prevLink}}>&lt; &lt; Pagina anterior</a>
      {{/if}}
      {{#if nextLink}}
          <a href={{nextLink}}>Siguiente pagina &gt; &gt;</a>
      {{/if}}
</footer>
