<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4">
            <div class="card-header">
                <h3 class="text-center">Login</h3>
            </div>  
            <div class="card-body">
                <form action="/login" method="post">
                    <div class="form-group mb-2">
                        <input type="email" name="email" placeholder="Email" class="form-control"/>
                    </div>
                    <div class="form-group mb-1">
                        <input type="password" name="password" placeholder="Password" class="form-control"/>
                    </div>
                    {{#if message}}
                    <span class="alert text-start">{{message}}</span>
                    {{/if}}
                    <button class="btn btn-primary btn-block mt-2 form-control" type="submit">Iniciar sesion</button>
                </form>
                <a href="api/auth/github/github"><button class="btn btn-primary btn-block mt-2 form-control">Entrar con Gitgub</button></a>
            </div>
        </div>
    </div>
</div>